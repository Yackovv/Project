<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mStyleCards">
        <item name="android:background">@drawable/radius_card</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="mStyleHotelCard">
        <item name="android:background">@drawable/bottom_radius_card</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="mStyleLayout" parent="Base.Theme.Project">
        <item name="android:background">@drawable/radius_layout</item>
    </style>

    <style name="mStyleToolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mStyleButton">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/radius_btn</item>
    </style>

    <style name="mStyleViewPager">
        <item name="android:background">@drawable/bg_view_pager</item>
    </style>

    <style name="mStyleTitleNameCard">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mStyleAddress">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="mStylePrise">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mStylePriseDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mStylePriseDescription.mStyleColumnFirst">
        <item name="android:gravity">top</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <style name="mStylePriseDescription.mStyleColumnFirst.mStyleColumnSecond">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="mStyleSmallDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mStyleSmallTitle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="mStyleUsualText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="mStyleChipItem">
        <item name="chipStrokeColor">@color/transparent</item>
        <item name="chipBackgroundColor">@color/light_grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="chipStartPadding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="chipEndPadding">10dp</item>
        <item name="chipSpacing">8dp</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="mStyleChipItem.mStyleChipStar">
        <item name="chipIcon">@drawable/start_hotel</item>
        <item name="chipBackgroundColor">@color/light_yellow</item>
        <item name="chipIconVisible">true</item>
        <item name="android:textColor">@color/dark_yellow</item>
    </style>

    <style name="mStyleChipItem.mStyleChipAboutRoom">
        <item name="closeIcon">@drawable/arrow_about_room</item>
        <item name="chipBackgroundColor">@color/light_blue</item>
        <item name="closeIconVisible">true</item>
        <item name="chipEndPadding">0dp</item>
        <item name="closeIconStartPadding">5dp</item>
        <item name="closeIconEndPadding">5dp</item>
        <item name="closeIconTint">@color/blue</item>
        <item name="closeIconSize">15dp</item>
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>