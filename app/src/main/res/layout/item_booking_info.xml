        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/tv_country_city"/>

    <TextView
        style="@style/mStyleColumnFirst"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/tv_date"/>

    <TextView
        style="@style/mStyleColumnFirst"
        android:layout_column="0"
        android:layout_row="3"
        android:text="@string/tv_number_night"/>

    <TextView
        style="@style/mStyleColumnFirst"
        android:layout_column="0"
        android:layout_row="4"
        android:text="@string/tv_hotel_name"/>

    <TextView
        style="@style/mStyleColumnFirst"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/tv_room"/>

    <TextView
        style="@style/mStyleColumnFirst"
        android:layout_column="0"
        android:layout_row="6"
        android:text="@string/tv_nutrition"/>

    <TextView
        style="@style/mStyleColumnSecond"
        android:layout_column="1"
        android:layout_row="0"
